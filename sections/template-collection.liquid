<div class="px-4 py-8">
  {% paginate collection.products by 12 %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>

    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">

        {% for product in collection.products %}

          <div class="w-full py-6 px-3">
            <div class="border bg-white chadow-lg rounded-lg overflow-hidden">

              {% if product.featured_image %}
                <img src="{{ product.image | image_url: 'medium' }}" alt="{{ product.featured_image.alt }}">

              {% endif %}
              <span>{{ product.vendor }}</span>
              <a href="{{ product.url }}">{{ product.title }}</a>
              <p>{{ product.price | money }}</p>
            </div>
          </div>


        {% else %}
          <p>There are no products inside of this collection</p>

          {% render 'pagination'
            , pagination: paginate %}
        {% endfor %}
      </div>
    </div>
  {% endpaginate %}
</div>